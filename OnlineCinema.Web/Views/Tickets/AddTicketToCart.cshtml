@model OnlineCinema.Domain.DTO.AddTicketToCartDTO

@{
    ViewData["Title"] = "Add Ticket To Your Cart";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Add Selected Ticket To Your Shopping Cart:</h2>

<hr />

<div class="row">
    <div class="col-md-4 m-auto">
        <form asp-action="AddTicketToCart" method="post">
            <input type="hidden" asp-for="TicketId" />
            <div class="form-group">
                <label asp-for="ChoosenTicket.TicketName"></label>
                <input disabled asp-for="ChoosenTicket.TicketName" class="form-control" />
            </div>

            <div class="form-group">
                <label asp-for="Quantity"></label>
                <input asp-for="Quantity" class="form-control" />
            </div>

            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>